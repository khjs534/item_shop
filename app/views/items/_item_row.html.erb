<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= item.name %></small></h4>
      <p><%= item.description %></p>
    </div>
    <div class="col-xs-4">
      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency item.price %></span></h4>
        <div class="input-group">
          <%= f.number_field :quantity, value: 1, class: "form-control", min: 1 %>
          <div class="input-group-btn">
            <%= f.hidden_field :item_id, value: item.id %>
            <%= f.submit "Add to Cart", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <% if can? :manage, item %>
    <div class="row">
      <div class="col-xs-8">
        <%= link_to 'Edit', edit_item_path(item), class: "button is-small" %>
         <%= link_to 'Delete', item, method: :delete, data: { confirm: "Are you sure ?" }, class: "button is-small" %>
      </div>
    </div>
  <% end %>
</div>
